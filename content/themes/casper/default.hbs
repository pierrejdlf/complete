      // called on voting button click
      var ploufvoter = function(vid) {
        console.log("Voting button video id:",vid);

        bootbox.prompt("To vote, please enter your mail below.", function(result) {                
          if (result === null) {                                             
            console.log("Mail dismissed.");
          } else {
            console.log("Mail to send:",result);

            // ajax call
            $.ajax({
              type: "GET",
              url: "//api.europemovingimage.eu/p/vote",
              data: {
                pid: vid,
                ident: "mail_dumbydumb@yo.net"
              },
              success: function(data) {
                console.log("success:",data);
                if(data.success) {
                  bootbox.alert("Cool, "+data.message);
                } else {
                  bootbox.alert("Badly enough, "+data.message);
                }
              },
              error: function(data) {
                console.log("error:",data);
              }
            });                       
          }
        });
      }
